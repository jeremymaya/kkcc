@page
@model KoreanKirklandCentralChurch.Pages.Admin.Albums.DetailsModel
@{
    ViewData["Title"] = "앨범관리자 - 앨범정보";
    Layout = "_Layout";
}

<div class="jumbotron jumbotron-fluid bg-light">
    <div class="container">
        <h1 class="display-4">앨범정보</h1>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Album.Thumbnail" width="500" height="375" />
        </div>
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Album.Thumbnail)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Album.Thumbnail)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Album.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Album.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Album.Date)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Album.Date)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Album.AlbumLink)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Album.AlbumLink)
                </dd>
            </dl>
            <div>
                <a asp-page="./Edit" asp-route-id="@Model.Album.Id">Edit</a> |
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
</div>